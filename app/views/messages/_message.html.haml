%li.chat-message
  .chat-message__header.clearfix
    %p.chat-message__name
      = message.user.name
    %p.chat-message__time
      = message.created_at.to_s(:default)
  %p.chat-message__body
    = message.content
    - if message.image.present?
      = image_tag(message.image, class: 'message_img')
