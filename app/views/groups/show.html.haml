.layout-notification
  .chat
    .chat-side
      .chat-user.clearfix
        %h5= current_user.name
        .chat-user__actions
          %a.chat-user__action{ href: '#' }
            %i.fa.fa-pencil-square-o
          = link_to edit_user_path(current_user), class: 'chat-user__action' do
            %i.fa.fa-cog
      %ul.chat-groups
        - @groups.each do |group|
          %li.chat-group
            = link_to group_path(group), class: 'chat-group__link' do
              %p.chat-group__name
                = group.name
              %p.chat-group__message
                = group.messages.last.content
    .chat-main
      .chat-header.clearfix
        .chat-header--left
          %h2 take
          %p.chat-header__users
            %span.chat-header__user hayato
        .chat-header--right
          %a.chat-header__edit-btn{ href: '#' } Edit
      .chat-body
        %ul.chat-messages
          - @group.messages.each do |message|
            %li.chat-message
              .chat-message__header.cleafix
                %p.chat-message__name hayato
                %p.chat-message__time
                  = message.created_at.to_s(:default)
              %p.chat-message__body
                = message.content
      .chat-footer
        .new_message#new_message
          = form_for (@message) do |f|
            = f.hidden_field :user_id, value: current_user.id
            = f.hidden_field :group_id, value: @group.id
            .chat-footer__body
              = f.text_area :content, rows: '1', placeholder: 'type a message'
              %label.chat-footer__file
                = f.file_field :image
                %i.fa.fa-image
            = f.submit 'Send'
