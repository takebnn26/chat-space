.layout-notification
  .chat
    = render 'layouts/chat_side_bar'
    .chat-main
      .chat-header.clearfix
        .chat-header--left
          %h2= @group.name
          %p.chat-header__users
            Members:
            - @group.users.each do |user|
              %span.chat-header__user
                = user.name
        .chat-header--right
          = link_to 'Edit', edit_group_path(@group), class: 'chat-header__edit-btn'
      .chat-body
        %ul.chat-messages
          - @group.messages.each do |message|
            %li.chat-message
              .chat-message__header.cleafix
                %p.chat-message__name
                  = message.user.name
                %p.chat-message__time
                  = message.created_at.to_s(:default)
              %p.chat-message__body
                = message.content
      .chat-footer
        .new_message#new_message
          = form_for (@message) do |f|
            = f.hidden_field :user_id, value: current_user.id
            = f.hidden_field :group_id, value: @group.id
            .chat-footer__body
              = f.text_area :content, rows: '1', placeholder: 'type a message'
              %label.chat-footer__file
                = f.file_field :image
                %i.fa.fa-image
            = f.submit 'Send'
